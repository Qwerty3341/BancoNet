<UserControl x:Class="Banco.UI.Main.About.AboutPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Banco.UI.Main.About"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="4*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Margin="10">
            <Label Content="Acerca de..." FontSize="36" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Left"/>
        </Border>
        <Border Grid.Row="1" Margin="10">
            <TextBlock x:Name="AboutText" TextWrapping="Wrap" Text="placeholder" FontSize="16"/>
        </Border>
    </Grid>
</UserControl>
