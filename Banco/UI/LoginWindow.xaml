<Window x:Class="Banco.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Banco"
        mc:Ignorable="d"
        Title="Iniciar Sesión - Banco" Height="450" Width="400" ResizeMode="NoResize">
    <Grid>
        <Label Content="Banco de SA" FontSize="24" HorizontalAlignment="Center" Margin="0,20,0,0" VerticalAlignment="Top"/>
        <Label Content="E-Mail:" HorizontalAlignment="Left" Margin="50,120,0,0" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" Margin="130,120,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="220" Name="txtUsername"/>
        <Label Content="Contraseña:" HorizontalAlignment="Left" Margin="50,160,0,0" VerticalAlignment="Top"/>
        <PasswordBox HorizontalAlignment="Left" Margin="130,160,0,0" VerticalAlignment="Top" Width="220" Name="txtPassword"/>
        <Button Content="Ingresar" HorizontalAlignment="Center" Margin="0,210,0,0" VerticalAlignment="Top" Width="100" Click="Button_Click"/>

    </Grid>
</Window>
