<Window x:Class="Banco.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Banco"
        mc:Ignorable="d"
        Title="Iniciar Sesión - Banco" Height="450" Width="400" ResizeMode="NoResize">
    <Grid>
        <Label Content="Banco de SA" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,10,0,0"/>
        <Label Content="E-Mail:" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,92,275,0"/>
        <TextBox HorizontalAlignment="Left" Margin="130,100,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="220" Name="txtUsername"/>
        <Label Content="Contraseña:" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,136,275,0"/>
        <PasswordBox HorizontalAlignment="Left" Margin="130,140,0,0" VerticalAlignment="Top" Width="220" Name="txtPassword"/>
        <Button Content="Ingresar" HorizontalAlignment="Center" Margin="0,190,0,0" VerticalAlignment="Top" Width="100" Click="Button_Click"/>

        <TextBlock Margin="0,230,0,0" VerticalAlignment="Top" HorizontalAlignment="Center">
            ¿No tienes cuenta? <Hyperlink NavigateUri="http://google.com">Registrarse</Hyperlink>
        </TextBlock>
    </Grid>
</Window>
